<div class="container">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <h1>Emailery</h1>
    <hr>
    <%= form_tag "/notifications" do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, "", class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= label_tag :message %>
        <%= text_area_tag :message, "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Send Email", class: "btn btn-success form-control" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-3">
  </div>
</div>
